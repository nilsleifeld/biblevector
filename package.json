{
  "name": "biblevector",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "format": "prettier --write \"**/*.{js,json,css}\"",
    "check": "tsc",
    "watch:css": "npx @tailwindcss/cli -i ./style.css -o ./static/css/style.css --watch",
    "build:js": "rollup -c",
    "build:css": "npx @tailwindcss/cli -i ./style.css -o ./static/css/style.css",
    "build": "npm run build:js && npm run build:css"
  },
  "author": "Nils Leifeld",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "lit-html": "^3.2.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.3",
    "daisyui": "^5.0.12",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@tailwindcss/cli": "^4.1.3",
    "prettier": "^3.3.3",
    "rollup": "^4.9.6",
    "typescript": "^5.5.2"
  }
}
